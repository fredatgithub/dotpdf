{
  "PageSetup": {
    "LeftMargin": "1cm",
    "RightMargin": "1cm",
    "TopMargin": "1cm"
  },
  "Children": [
    {
      "Type": "Paragraph",
      "Text": "Product List",
      "Format": {
        "Font": {
          "Size": "1cm"
        }
      }
    },
    {
      "Type": "Table",
      "Borders": {
        "Width": "0.05cm"
      },
      "@Columns": [
        {
          "Width": "6cm"
        },
        {
          "Width": "6cm"
        },
        {
          "Width": "6cm"
        }
      ],
      "@Rows": [
        {
          "Format": {
            "Font": {
              "Bold": true
            }
          }
        },
        {
          "ForEach": "Obj.Products"
        },
        {
          "Borders": {
            "Width": 0
          }
        }
      ],
      "@Cells": [
        {
          "@Row": 0,
          "@Column": 0,
          "Children": [
            {
              "Type": "Paragraph",
              "Text": "Description"
            }
          ]
        },
        {
          "@Row": 0,
          "@Column": 1,
          "Children": [
            {
              "Type": "Paragraph",
              "Text": "Quantity"
            }
          ]
        },
        {
          "@Row": 0,
          "@Column": 2,
          "Children": [
            {
              "Type": "Paragraph",
              "Text": "Price"
            }
          ]
        },
        {
          "@Row": 1,
          "@Column": 0,
          "Children": [
            {
              "Type": "Paragraph",
              "CompiledText": "(string) Item.Description"
            }
          ]
        },
        {
          "@Row": 1,
          "@Column": 1,
          "Children": [
            {
              "Type": "Paragraph",
              "CompiledText": "Item.Quantity"
            }
          ]
        },
        {
          "@Row": 1,
          "@Column": 2,
          "Children": [
            {
              "Type": "Paragraph",
              "CompiledText": "Item.Price"
            }
          ]
        },
        {
          "@Row": 2,
          "@Column": 2,
          "Children": [
            {
              "Type": "Paragraph",
              "CompiledText": "\"Total: \" + Obj.Total"
            }
          ]
        }
      ]
    },
    {
      "Type": "Footer",
      "Children": [
        {
          "Type": "Paragraph",
          "Children": [
            {
              "Type": "Paragraph",
              "Text": "Page "
            },
            {
              "Type": "PageField"
            },
            {
              "Type": "Paragraph",
              "Text": " of "
            },
            {
              "Type": "NumPagesField"
            }
          ]
        }
      ]
    }
  ]
}